<p id="notice"><%= notice %></p>

<h1>Image Uploaders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Avtar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_uploaders.each do |image_uploader| %>
      <tr>
        <td><%= image_uploader.name %></td>
        <td><%= image_uploader.email %></td>
        <td><%= image_uploader.avtar %></td>
        <td><%= link_to 'Show', image_uploader %></td>
        <td><%= link_to 'Edit', edit_image_uploader_path(image_uploader) %></td>
        <td><%= link_to 'Destroy', image_uploader, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

